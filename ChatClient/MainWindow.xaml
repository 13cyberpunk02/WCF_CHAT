<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="485" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Background="#FF448072">
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="35" Margin="147,10,0,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" Width="314" Background="#FF6DD6BE"/>
        <Button x:Name="btnConnect" Content="Подключиться" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="35" Background="#FF9BFB85" Click="BtnConnect_Click"/>
        <ListBox x:Name="lbMessages" HorizontalAlignment="Left" Height="254" VerticalAlignment="Top" Width="451" Margin="10,50,0,0" Background="#FF6FB998"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="101" Margin="10,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="451" Background="#FF93FFE7" KeyDown="TxtMessage_KeyDown"/>

    </Grid>
</Window>
